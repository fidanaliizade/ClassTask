@using Pustok_Temp.Models;
@model Book
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="mb-3 col-md-3">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title" style="color:red"></span>
            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="Price" class="form-label">SubTitle</label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" style="color:red"></span>
            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="Authors.Name" class="form-label">Image File</label>
                <input asp-for="Authors.Name" class="form-control">
                <span asp-validation-for="Authors.Name" style="color:red"></span>
            </div>

        </div>
        <div class="row">
            <div class="mb-3 col-md-6">
                <label asp-for="ImgUrl" class="form-label">ImgUrl</label>
                <textarea class="form-control" asp-for="ImgUrl" rows="4"></textarea>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>